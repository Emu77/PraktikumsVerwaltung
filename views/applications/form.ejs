<h2>Bewerbung</h2>
<form method="post" action="<%= edit ? '/applications/' + values.id : '/applications' %>">
  <input name="person_id" value="<%= values.person_id || '' %>" placeholder="Person-ID">
  <input name="potpraktikum_id" value="<%= values.potpraktikum_id || '' %>" placeholder="Unternehmen-ID">
  <select name="status">
    <option value="geplant">geplant</option>
    <option value="gesendet">gesendet</option>
    <option value="eingeladen">eingeladen</option>
    <option value="zusage">zusage</option>
    <option value="absage">absage</option>
  </select>
  <input type="date" name="bewerbungsdatum" value="<%= values.bewerbungsdatum || '' %>">
  <input type="date" name="rueckmeldung_bis" value="<%= values.rueckmeldung_bis || '' %>">
  <textarea name="notizen"><%= values.notizen || '' %></textarea>
  <button>Speichern</button>
</form>